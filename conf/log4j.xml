    </category>
   <category name="com.beintoo.commons.helper" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="API"/>
    </category>
   <category name="com.beintoo.jms" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="API"/>
    </category>
   <category name="com.beintoo.external" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="API"/>
    </category>
   <category name="com.beintoo.cron" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="CRON"/>
    </category>
   <category name="com.beintoo.cron.updater" additivity="false">
