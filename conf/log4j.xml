<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"> 

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyyMMdd.HHmmss.SSS} %-5p %c{1} - %m%n" />
        </layout>
    </appender>
  <appender name="CACHE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/cache.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyMMddHHmmss} %d %p %c{2} - %m%n"/>
        </layout>
    </appender>
  <appender name="RANKING" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/ranking.log"/>
