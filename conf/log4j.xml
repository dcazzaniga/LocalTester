        <appender-ref ref="CONVERSION"/>
    </category>
    <category name="DELIVERY" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="BACKEND"/>
    </category>
    <category name="CRON" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="CRON"/>
    </category>
        <category name="EMAIL" additivity="false">
