    </category>

    <category name="CONFIGURATION" additivity="false">
        <priority value="INFO"/>
        <appender-ref ref="CONFIGURATION"/>
    </category>

    <category name="com.beintoo" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE" />
    </category>

    <category name="com.danga" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="CACHE" />
