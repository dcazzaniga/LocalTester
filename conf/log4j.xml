<!-- ======================================================================== -->

    <category name="com.beintoo.api.filter.NetLimiterFilter" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="NETLIMITER"/>
    </category>
    <category name="SDK_LOGGING" additivity="false">
