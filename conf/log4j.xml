    <category name="SDK_LOGGING_IOS" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="SDK_LOGGING_IOS"/>
    </category>
	
    <category name="com.beintoo.api" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="API"/>
    </category>
    <category name="com.beintoo.commons.solr" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="API"/>
    </category>
    <category name="com.beintoo.dispatcher" additivity="false">
        <priority value="DEBUG"/>
        <appender-ref ref="API"/>
    </category>    
    <category name="com.beintoo.commons.util" additivity="false">
